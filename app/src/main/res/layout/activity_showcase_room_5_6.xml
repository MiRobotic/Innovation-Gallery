<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="ContentDescription"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/igtop"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner_image"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="@dimen/button_nav"
            android:layout_height="@dimen/button_nav"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:src="@drawable/img_home"/>

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="@dimen/button_nav"
            android:layout_height="@dimen/button_nav"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_next"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/source_san_pro"
            android:layout_margin="10dp"
            android:text="Showcase Campus Room 5">


        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/campus5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout2"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:fontFamily="@font/source_san_pro"
            android:singleLine="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Showcase Campus Room 6">


        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:src="@drawable/campus6"></ImageView>

    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/logoinfineon"></ImageView>

</RelativeLayout>