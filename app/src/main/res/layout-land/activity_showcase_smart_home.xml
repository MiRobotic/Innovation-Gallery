<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="ContentDescription"
    tools:context=".MainActivity">


    <ImageView
        android:src="@drawable/igtop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_small">

                <ImageView
                    android:id="@+id/btnHome"
                    android:src="@drawable/img_back"
                    android:layout_margin="@dimen/space_small"
                    android:layout_width="@dimen/button_nav"
                    android:layout_height="@dimen/button_nav"/>


                <TextView
                    android:gravity="center"
                    android:textSize="@dimen/text_head"
                    android:fontFamily="@font/source_san_pro"
                    android:layout_marginStart="@dimen/space_small"
                    android:layout_marginEnd="@dimen/space_small"
                    android:text="@string/showcase_smart_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


            <ImageView
                android:src="@drawable/smarthome"
                android:scaleType="fitCenter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/room_5_height"/>


            <ImageView
                android:src="@drawable/smarthomeboy"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/space_small"
                android:layout_marginEnd="@dimen/space_small"
                android:layout_height="300dp"/>
        </LinearLayout>
    </ScrollView>


    <ImageView
        android:layout_margin="@dimen/space_small"
        android:src="@drawable/logoinfineon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height" />


</LinearLayout>